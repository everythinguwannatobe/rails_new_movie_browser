<div class="movies-background">
  <div class="container">
    <div class="btn-group ms-3">
      <a href="#" class="btn btn-outline-success active" aria-current="page">Popular</a>
      <a href="#" class="btn btn-outline-success">Link</a>
      <a href="#" class="btn btn-outline-success">Link</a>
    </div>
    <div class="row mt-5">
      <% @movies.each do |movie| %>
        <div class="col-lg-3 col-md-4 col-sm-6 col-xs-12">
          <div class="movie__card">
            <div class="">
              <%= image_tag 'https://image.tmdb.org/t/p/w300/' + movie["poster_path"], class: "card-img-top" %>
            </div>
            <div class="movie__card--body">
              <span class="movie__card--rating"><%= movie["vote_average"] %></span>
              <div class="movie__card--title text-truncate">
                <%= movie["title"] %>
              </div>
              <p class="small mb-0"><%= movie_genre_names(movie["genre_ids"]) %></p>
            </div>
          </div>
        </div>
      <% end %>
    </div>

  </div>
</div>